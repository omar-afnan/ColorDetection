#include <Arduino.h>
#include <ESP32Servo.h>

#define IN1 27
#define IN2 26
#define IN3 25
#define IN4 33
#define SERVO_PIN 13

Servo camServo;

// âœ… Function Prototypes (required)
void moveForward();
void turnRight();
void stopMotors();
void scanArea();

void setup() {
  Serial.begin(9600);
  camServo.attach(SERVO_PIN);

  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);
}

void loop() {
  if (Serial.available()) {
    String cmd = Serial.readStringUntil('\n');
    cmd.trim();

    if (cmd == "PUSH_RED") {
  Serial.println("ðŸš— Executing PUSH_RED");
  moveForward();
  delay(1000);
  stopMotors();
} else if (cmd == "PUSH_BLUE") {
      Serial.println("ðŸš— Executing PUSH_BLUE");
      moveForward();
      delay(1000);
      turnRight();
      delay(500);
      stopMotors();
    } else if (cmd == "SCAN") {
      scanArea();
    }
  }
}

void moveForward() {
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
}

void turnRight() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, HIGH);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
}

void stopMotors() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, LOW);
  digitalWrite(IN4, LOW);
}

void scanArea() {
  for (int pos = 60; pos <= 120; pos += 10) {
    camServo.write(pos);
    delay(200);
  }
  for (int pos = 120; pos >= 60; pos -= 10) {
    camServo.write(pos);
    delay(200);
  }
}
