#include <Arduino.h>
#include <ESP32Servo.h>

#define IN1 27
#define IN2 26
#define IN3 25
#define IN4 33
#define SERVO_PIN 13

Servo camServo;

// ‚úÖ Function Prototypes
void moveForward();
void turnRight();
void stopMotors();
void scanArea();

void setup() {
  Serial.begin(9600);
  while (!Serial) {
    delay(10); // Wait for serial port to be ready
  }

  Serial.println("‚úÖ ESP32 Booted and Ready");

  camServo.attach(SERVO_PIN);

  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);

  stopMotors(); // Safety
}

void loop() {
  if (Serial.available()) {
    String cmd = Serial.readStringUntil('\n');
    cmd.trim();

    Serial.print("üì• Received: ");
    Serial.println(cmd);

    if (cmd == "PUSH_RED") {
      Serial.println("üöó Executing PUSH_RED: Move Forward and Stop");
      moveForward();
      delay(1000);
      stopMotors();
    } 
    else if (cmd == "PUSH_BLUE") {
      Serial.println("üöó Executing PUSH_BLUE: Move Forward, Turn Right, Stop");
      moveForward();
      delay(1000);
      turnRight();
      delay(500);
      stopMotors();
    } 
    else if (cmd == "SCAN") {
      Serial.println("üîÑ Executing SCAN: Sweeping servo");
      scanArea();
    } 
    else {
      Serial.println("‚ö†Ô∏è Unknown command");
    }
  }
}

void moveForward() {
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
}

void turnRight() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, HIGH);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
}

void stopMotors() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, LOW);
  digitalWrite(IN4, LOW);
}

void scanArea() {
  for (int pos = 60; pos <= 120; pos += 10) {
    camServo.write(pos);
    delay(200);
  }
  for (int pos = 120; pos >= 60; pos -= 10) {
    camServo.write(pos);
    delay(200);
  }
}
